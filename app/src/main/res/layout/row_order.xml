<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    android:layout_height="150dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >

        <ImageView
            android:id="@+id/order_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/man_category">
        </ImageView>

        <TextView
            android:id="@+id/order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/order_image"
            android:text="order number"
            android:textSize="24dp">

        </TextView>

        <TextView
            android:id="@+id/order_willaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/order_number"
            android:layout_toRightOf="@id/order_image"
            android:text="order willaya"
            android:textSize="20dp">

        </TextView>
        <TextView
            android:id="@+id/order_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="address"
            android:layout_toRightOf="@id/order_image"
            android:layout_marginLeft="10dp"
            android:textSize="17dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            >
        </TextView>
        <TextView
            android:id="@+id/order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="state"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:textSize="17dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            >
        </TextView>

        <Button
            android:layout_toRightOf="@id/order_image"
            android:layout_below="@id/order_willaya"
            android:id="@+id/accept_btn"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept" />
        <Button
            android:layout_toRightOf="@id/accept_btn"
            android:visibility="gone"
            android:layout_below="@id/order_willaya"
            android:id="@+id/decline_btn"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decline" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>